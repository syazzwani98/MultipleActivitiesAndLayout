<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFCC"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="445dp"
        android:layout_height="wrap_content"
        android:background="#7033B4A5"
        android:gravity="center"
        android:text="Home Menu"
        android:textColor="#0F0E0E"
        android:textSize="30sp"
        app:fontFamily="@font/finger_paint" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="451dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Using Linear Layout"
        android:textColor="#161515"
        android:textSize="24sp"
        app:fontFamily="@font/just_me_again_down_here" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimaryDark" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/com" />


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34466B68"
        android:onClick="BtnRelClicked"
        android:text="RELATIVE LAYOUT"
        android:textColor="#009688" />


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8A0B0C0C"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="155dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/cl" />


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3654706E"
        android:onClick="BtnConClicked"
        android:text="CONTSRAINT LAYOUT"
        android:textColor="#009688" />


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="116dp"
        app:srcCompat="@drawable/g" />


    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34556B69"
        android:onClick="BtnGridClicked"
        android:text="GRID LAYOUT"
        android:textColor="#009688" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark" />

</LinearLayout>






